#! /bin/sh
# postinst script for klik
#
# see: dh_installdeb(1)

#set -e

case "$1" in
    configure)
	
	if [ -x `which gconf-schemas` ];then 
		gconf-schemas --register /usr/share/gconf/schemas/klik-gnome-thumbnail.schemas >/dev/null;
	fi
	if [ -x `which update-binfmts`  ];then
		update-binfmts --install cmg /usr/bin/cmgrun  --magic Compressed --offset 16 >/dev/null;
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


